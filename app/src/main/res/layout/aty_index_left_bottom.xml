<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"

    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/id_Atyindex_Li_food"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="1"

        android:gravity="left"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/id_Atyindex_img_food"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/food" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_Atyindex_Li_movies"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="left"
        android:orientation="vertical">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/id_Atyindex_img_movies"
            android:src="@drawable/movies" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_Atyindex_Li_scenery"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="left"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/id_Atyindex_img_scenery"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/scenery" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_Atyindex_Li_forum"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="left"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/id_Atyindex_img_forum"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/forum" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_Atyindex_Li_hotal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="left"
        android:orientation="vertical">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/id_Atyindex_img_hotal"
            android:src="@drawable/hotal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_Atyindex_Li_nearly"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="left"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/id_Atyindex_img_nearly"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="left"
            android:src="@drawable/forum" />
    </LinearLayout>
</LinearLayout>